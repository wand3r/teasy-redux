{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "jsx": "preserve",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "outDir": "./dist"
  },
  "include": ["src/index.ts"]
}
